{
  "devDependencies": {
    "@types/node": "^22.10.5",
    "vitepress": "^1.5.0"
  },
  "scripts": {
    "dev": "CC_VERSION=$(git tag --list --sort=-v:refname) vitepress dev",
    "build": "CC_VERSION=$(git tag --list --sort=-v:refname) vitepress build",
